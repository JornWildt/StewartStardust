! entities (personligt)
{
  > (din|dit|dine|deres) (mor|far|søster|søstre|bror|brødre|onkel|tante)  
  > (din|dit|dine|deres) (yndlingsfarve)
}

! pattern (intent = hvordan_går_det, type = spm)
{
  > hvordan går det
  > hvordan har du det
  > har du det godt
  > er du på toppen  
  > er alt i orden
  > er du ok
  > er du okay
}

! pattern (intent = hvad_hedder_du, type = spm)
{
  > hvad hedder %du
  > hvad er %du navn
  > hvad kaldes %du
}

! pattern (intent = hvad_laver_du, type = spm)
{
  > hvad laver %du
  > hvad arbejder %du med
}

! pattern (intent = hvem_er_du, type = spm)
{
  > hvem er %du
  > hvad er %du for en
  > fortæl om dig selv
}

! pattern (intent = hvor_gammel_er_du, type = spm)
{
  > hvor gammel er %du
  > hvor mange år er %du
}

! pattern (intent = taler_du, type = spm)
{
  > taler %du {sprog}
  > kan %du tale {sprog}
  > snakker %du {sprog}
}

! pattern (intent = spiser_du, type = spm)
